datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
  SMALLADMIN
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  nom         String?
  prenom      String?
  email       String   @unique
  identifiant String   @unique
  password    String
  role        Role     @default(USER)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
